<% layout("layouts/boilerplate") %>
<div class="container vh-100 d-flex mt-4 justify-content-center">
  <div class="col-10 col-md-6">
    <div class="text-center mb-4">
      <h2>Edit the blog</h2>
    </div>
    <form
      id="blogForm"
      method="POST"
      action="/blog/<%=myBlog._id%>?_method=PUT"
      class="g-3"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Blog Title</label>
        <input
          type="text"
          id="title"
          name="blog[title]"
          class="form-control"
          placeholder="Enter the blog title"
          value="<%=myBlog.title%>"
        />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Blog Image (Base64 String)</label>
        <input
          type="text"
          id="image"
          name="blog[image]"
          class="form-control"
          placeholder="Enter the blog title"
          value="<%=myBlog.image%>"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Blog Description</label>
        <textarea
          id="description"
          name="blog[description]"
          class="form-control"
          rows="5"
          placeholder="Write the blog description"
        >
<%=myBlog.description%></textarea
        >
      </div>
      <div class="mb-3">
        <button type="submit" class="btn btn-danger">Submit</button>
      </div>
    </form>
  </div>
</div>
